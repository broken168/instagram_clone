<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    app:startDestination="@id/viewProfile">

    <fragment
        android:id="@+id/viewProfile"
        android:name="com.cursoandroid.gabriel.instagramclone.fragment.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/activity_perfil_amigo">

        <action
            android:id="@+id/action_profile_to_edit_profile"
            app:destination="@id/editProfile"
        />

    </fragment>

    <fragment
        android:id="@+id/editProfile"
        android:name="com.cursoandroid.gabriel.instagramclone.fragment.EditProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_edit_profile">

    </fragment>

</navigation>